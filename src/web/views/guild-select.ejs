<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Server - Pokemon Gym League</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="guild-select-container">
            <div class="guild-select-card">
                <div class="header-icon">
                    <i class="fas fa-server"></i>
                </div>
                <h1 class="guild-select-title">üèÜ Pokemon Gym League</h1>
                <p class="guild-select-description">
                    Select a Discord server to view its Pokemon Gym League leaderboard
                </p>
                
                <% if (guilds && guilds.length > 0) { %>
                    <div class="guild-dropdown-container">
                        <select id="guildSelect" class="guild-dropdown">
                            <option value="">Choose a server...</option>
                            <% guilds.forEach(guild => { %>
                                <option value="<%= guild.id %>" data-icon="<%= guild.icon || '' %>">
                                    <%= guild.name %> (<%= guild.memberCount %> members)
                                </option>
                            <% }); %>
                        </select>
                        
                        <button class="guild-btn" onclick="viewLeaderboard()" id="viewBtn" disabled>
                            <i class="fas fa-trophy"></i>
                            View Leaderboard
                        </button>
                        
                        <div class="loading-indicator" id="loading" style="display: none;">
                            <i class="fas fa-spinner fa-spin"></i>
                            Loading leaderboard...
                        </div>
                    </div>

                    <div class="quick-stats">
                        <h3>üìä Quick Stats</h3>
                        <div class="stats-grid">
                            <div class="stat-item">
                                <i class="fas fa-server"></i>
                                <span><%= guilds.length %> Servers</span>
                            </div>
                            <div class="stat-item">
                                <i class="fas fa-users"></i>
                                <span><%= guilds.reduce((total, guild) => total + guild.memberCount, 0) %> Total Members</span>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="no-servers-card">
                        <i class="fas fa-exclamation-triangle"></i>
                        <h3>No Servers Found</h3>
                        <p>The Pokemon Gym League bot is not connected to any Discord servers yet.</p>
                        <p>Please invite the bot to your server first!</p>
                        
                        <div class="help-links">
                            <a href="#" class="help-btn">
                                <i class="fas fa-question-circle"></i>
                                How to Invite Bot
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <style>
        .guild-select-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
        }

        .guild-select-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 50px 40px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

        .header-icon {
            font-size: 4rem;
            color: #3498db;
            margin-bottom: 30px;
        }

        .guild-select-title {
            font-size: 2.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .guild-select-description {
            font-size: 1.1rem;
            color: #7f8c8d;
            margin-bottom: 40px;
            line-height: 1.6;
        }

        .guild-dropdown-container {
            margin-bottom: 30px;
        }

        .guild-dropdown {
            width: 100%;
            padding: 15px 20px;
            font-size: 1rem;
            border: 2px solid #ecf0f1;
            border-radius: 12px;
            background: white;
            color: #2c3e50;
            margin-bottom: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .guild-dropdown:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 15px rgba(52, 152, 219, 0.3);
        }

        .guild-btn {
            background: linear-gradient(145deg, #3498db, #2980b9);
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .guild-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
        }

        .guild-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .loading-indicator {
            color: #3498db;
            font-weight: 500;
            margin-top: 15px;
        }

        .loading-indicator i {
            margin-right: 10px;
        }

        .quick-stats {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            margin-top: 30px;
        }

        .quick-stats h3 {
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #5a6c7d;
            font-weight: 500;
        }

        .stat-item i {
            color: #3498db;
            font-size: 1.2rem;
        }

        .no-servers-card {
            background: linear-gradient(145deg, #e74c3c, #c0392b);
            color: white;
            padding: 40px;
            border-radius: 15px;
            margin-top: 20px;
        }

        .no-servers-card i {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .no-servers-card h3 {
            margin-bottom: 15px;
        }

        .no-servers-card p {
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .help-links {
            margin-top: 25px;
        }

        .help-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            text-decoration: none;
            padding: 12px 20px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .help-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .guild-select-card {
                padding: 30px 20px;
                margin: 20px;
            }
            
            .guild-select-title {
                font-size: 2rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <script>
        const select = document.getElementById('guildSelect');
        const btn = document.getElementById('viewBtn');
        const loading = document.getElementById('loading');

        if (select) {
            select.addEventListener('change', function() {
                const isSelected = this.value !== '';
                btn.disabled = !isSelected;
                
                if (isSelected) {
                    const selectedOption = this.options[this.selectedIndex];
                    const serverName = selectedOption.text.split(' (')[0]; // Get server name without member count
                    btn.innerHTML = `<i class="fas fa-trophy"></i> View ${serverName} Leaderboard`;
                } else {
                    btn.innerHTML = `<i class="fas fa-trophy"></i> View Leaderboard`;
                }
            });
        }

        function viewLeaderboard() {
            const guildId = select.value;
            if (!guildId) return;
            
            btn.style.display = 'none';
            loading.style.display = 'block';
            
            // Add a small delay for better UX
            setTimeout(() => {
                window.location.href = '/?guild=' + guildId;
            }, 500);
        }

        // Auto-select if there's only one server
        if (select && select.options.length === 2) { // 2 because of "Choose a server..." option
            select.selectedIndex = 1;
            select.dispatchEvent(new Event('change'));
        }

        // Add keyboard support
        if (select) {
            select.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && this.value) {
                    viewLeaderboard();
                }
            });
        }
    </script>
</body>
</html>